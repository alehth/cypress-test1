pipeline{
    agent any
    tools {nodejs "node"}
    environment {
    CYPRESS_RECORD_KEY = credentials('CYPRESS_RECORD_KEY')
  }

    stages{
        stage('cypress parallel tests'){
            parallel{
                stage('tester A'){
                    steps{
                        sh "npm run cy:run"
                    }
                }

                stage('tester B'){
                    agent{
                        label "Nodo-Test1"
                    }
                    steps{
                        sh "npm run cy:run"
                    }
                }

            }
        }
    }
}