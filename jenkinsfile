pipeline {
    agent none

    stages {
        stage('Correr pruebas en paralelo') {
            parallel {
                stage('Correr en build-in') {
                    agent { label 'build-in' }

                    steps {
                        echo 'Ejecutando en el nodo build-in (principal)'
                        bat 'npm install'
                        bat 'npx cypress run --browser chrome --headless'
                    }
                }

                stage('Correr en Nodo-Test1') {
                    agent { label 'Nodo-Test1' }

                    steps {
                        echo 'Ejecutando en el nodo Nodo-Test1'
                        bat 'npm install'
                        bat 'npx cypress run --browser chrome --headless'
                    }
                }
            }
        }
    }
}