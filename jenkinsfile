pipeline {
    agent none

    stages {
        stage('Run Cypress in parallel') {
            parallel {
                stage('Run on principal') {
                    agent { label 'principal' }
                    steps {
                        checkout scm
                        sh 'npm ci'
                        sh 'npx cypress run --record --parallel --key $CYPRESS_RECORD_KEY'
                    }
                }

                stage('Run on Nodo-Test1') {
                    agent { label 'Nodo-Test1' }
                    steps {
                        checkout scm
                        sh 'npm ci'
                        sh 'npx cypress run --record --parallel --key $CYPRESS_RECORD_KEY'
                    }
                }
            }
        }
    }
}
