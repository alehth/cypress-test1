pipeline {
    agent none

    stages {
        stage('Run Cypress in parallel') {
            parallel {
                stage('Run on Master') {
                    agent { label 'master' }
                    steps {
                        checkout scm
                        sh 'npm ci'
                        sh 'npx cypress run --record --parallel --key $CYPRESS_RECORD_KEY'
                    }
                }

                stage('Run on Mac') {
                    agent { label 'Mac' }
                    steps {
                        checkout scm
                        sh 'npm ci'
                        sh 'npx cypress run --record --parallel --key $CYPRESS_RECORD_KEY'
                    }
                }
            }
        }
    }
}
